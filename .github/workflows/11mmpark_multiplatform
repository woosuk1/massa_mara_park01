name: massai mara park 01 docker multiplaform 

on:
  workflow_dispatch

env:
  DOCKER_USERNAME: woosuk02
  IMAGE_NAME: massai_mara
  IMAGE_TAG: v${{ github.run_number }}
  HOSTNAME: 3.36.88.116
  USERNAME: ubuntu  

jobs:
  build_image:
    runs-on: ubuntu-22.04

    steps:
      - name: Checkout Code
        uses: actions/checkout@v4

      - name: login to docker hub
        uses: docker/login-action@v3
        with:
          username: ${{ env.DOCKER_USERNAME }} 
          password: ${{ secrets.DOCKER_PASSWORD }}

      # arm64 에뮬레이션 - QEmu 
      - name: setup QEMU
        uses: docker/setup-qemu-action@v3 
        with:
          platforms: linux/amd64,linux/arm64

      - name: setup docker buildx
        uses: docker/setup-buildx-action@v3

      - name: Build Docker image
        uses: docker/build-push-action@v6
        with:
          context: .
          file: ./Dockerfile
          #platforms: linux/amd64,linux/arm64/v8,linux/arm64/v7,linux/arm64
          platforms: linux/amd64,linux/arm64
          push: true
          load: false
          tags: |
            ${{ env.DOCKER_USERNAME }}/${{ env.IMAGE_NAME }}:latest
            ${{ env.DOCKER_USERNAME }}/${{ env.IMAGE_NAME }}:${{ env.IMAGE_TAG }}
          cache-from: type=gha
          cache-to: type=gha,mode=max          

      - name: check image
        run: |
          docker image ls

      - name: logout from docker hub
        if: always()
        run: docker logout   

  upload_compose:
    needs: build_image
    runs-on: ubuntu-22.04

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: copy file to EC2
        uses: appleboy/scp-action@master
        with:
          host: ${{ env.HOSTNAME }}
          username: ${{ env.USERNAME }}
          key: ${{ secrets.EC2_PRIVATE_KEY }}
          port: 22
          source: "compose-multijobs.yaml"
          target: "/home/${{ env.USERNAME }}"


  run_test:
    needs: upload_compose
    runs-on: ubuntu-22.04

    steps:
      - name: deploy on EC2
        uses: appleboy/ssh-action@master 
        with: 
          host: ${{ env.HOSTNAME }}
          username: ${{ env.USERNAME }}
          key: ${{ secrets.EC2_PRIVATE_KEY }}
          port: 22
          script: |
            docker compose -f ./compose-multijobs.yaml down  
            docker image rm -f siestageek/massai_mara
            docker compose -f ./compose-multijobs.yaml up -d
            sleep 15
          
            docker compose -f ./compose-multijobs.yaml ps
            docker compose -f ./compose-multijobs.yaml logs
  